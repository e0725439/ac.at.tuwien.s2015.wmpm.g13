<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans    
        http://www.springframework.org/schema/beans/spring-beans-4.1.xsd        
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:annotation-config/>

    <!-- We still need it for loading the CXFServlet -->
    <import resource="classpath:META-INF/cxf/cxf.xml"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>mongo_db.properties</value>
                <value>mail.properties</value>
                <value>facebook.properties</value>
            </list>
        </property>
    </bean>
    
 	<bean id="properties" class="org.apache.camel.component.properties.PropertiesComponent">
    	<property name="locations" >
    		<list>
              <value>classpath:mongo_db.properties</value>
              <value>classpath:mail.properties</value>
              <value>classpath:webservices.properties</value>
          </list>
    	</property>
	</bean>

    <bean id="myDb" class="com.mongodb.Mongo">
        <constructor-arg index="0">
            <bean class="com.mongodb.MongoURI">
                <constructor-arg index="0"
                                 value="mongodb://${mongo_db_user_name}:${mongo_db_user_password}@${mongo_db_host}:${mongo_db_port}/${mongo_db_name}"/>
            </bean>
        </constructor-arg>
    </bean>
    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="${mail.server.host}"/>
        <property name="port" value="${mail.server.port}"/>
        <property name="protocol" value="${mail.server.protocol}"/>
        <property name="username" value="${mail.server.user.name}"/>
        <property name="password" value="${mail.server.user.password}"/>
        <property name="javaMailProperties">
            <props>
                <prop key="mail.smtp.auth">true</prop>
                <prop key="mail.smtp.starttls.enable">false</prop>
                <prop key="mail.smtp.quitwait">false</prop>
                <prop key="mail.smtp.socketFactory.class">javax.net.ssl.SSLSocketFactory</prop>
                <prop key="mail.smtp.socketFactory.fallback">false</prop>
                <prop key="mail.debug">true</prop>
            </props>
        </property>
    </bean>

    <bean id="confirmationEmail" class="org.springframework.mail.SimpleMailMessage">
        <property name="to" value="powermaterials2015@gmail.com"></property>
        <property name="from" value="powermaterials2015@gmail.com"></property>
        <property name="subject" value="Confirmation Mail for Order"/>
    </bean>
    
    <bean id="businessConfirmationEmail" class="org.springframework.mail.SimpleMailMessage">
        <property name="to" value="powermaterials2015@gmail.com"></property>
        <property name="from" value="business-powermaterials2015@gmail.com"></property>
        <property name="subject" value="Confirmation Mail for Business Order"/>
    </bean>
</beans>